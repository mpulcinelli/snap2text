{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake",
      "type": "shell",
      "options": {
        "cwd": "${workspaceRoot}/build"
      },
      "command": "/snap/bin/cmake",
      "args": [
        "--build",
        "${workspaceRoot}/build",
        "--config",
        "Debug",
        "--target",
        "all",
        "--",
        "-j",
        "10"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}